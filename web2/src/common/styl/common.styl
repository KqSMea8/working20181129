/* ------------------   dialog start   ------------------ */
.dialog_shade{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 8889;

    height: 100%;
    text-align: center;

    animation: opac 0.15s linear;
    background-color: rgba(0, 0, 0, 0.5);
    @keyframes opac {
        from {
            background-color: rgba(0, 0, 0, 0);
        }

        to {
            background-color: rgba(0, 0, 0, 0.5);
        }
    }  
        &::before{
            content:'';
            display: block;
            vertical-align: middle;
            width: 0;
            height: 25%;
        }
        .dialog{
            margin: auto;         
            text-align: center;
            border-radius: 2px;
            padding: 10px;
            background: white;
            position: relative;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2);
            vertical-align: middle;
            z-index: 999999;

            margin-top: 0px;
            animation: movein 0.5s ease-out;

            @keyframes movein {
                from {
                    top: -30px;
                }

                to {
                    top: 0px;
                }
            }

              .dialog_content{
                  width: 100%;               
                    .dialog_loading{
                        display: block;
                        padding: 24px 0 6px;
                        color: #000;
                        font-size: 12px;
                        line-height: 28px;
                        text-align: center;
                        width: 298px;
                        height: 28px;
                        background: url('./assets/image/ajax_loading.gif') no-repeat center 14px;
                          .dialog_title,#dialog_close{
                            display:none;
                          }

                    }
                    .dialog_message{
                        display: inline-block;
                        max-width: 86%;
                        margin-left: 5px;
                        margin-top: 5px;
                        line-height: 24px;
                        font-size: 15px;
                        font-weight: 700;
                        text-align: left;
                        vertical-align: middle;
                        overflow: auto;
                        max-height: 100px;
                        word-wrap: break-word;
                        font-weight: normal;
                    }
                    .dialog_success{
                        padding: 7px 10px 15px;
                        border-bottom: 1px solid #efefef;                      
                        width:100%;
                        display:block;
                        .dialog_title{
                          display: inline-block;
                          width: 50%;
                          text-align: left;
                          //font-weight: bold;
                          font-size: 16px;                          
                        }
                        #dialog_close{
                            display: inline-block;
                            width: 50%;
                            cursor:pointer;
                            padding: 0;
                            cursor: pointer;
                            background: url('./assets/image/modal_close.png') no-repeat right;
                            height: 17px;
                        }
                    }                                                       
              }
              .dialog_btn{
                position: relative;    
                  .btn-main{
                    background: #007aff;
                    width: 120px;
                    padding: 0px 10px;
                    letter-spacing: 2px;
                    color:white;
                    height: 32px;
                    line-height: 32px;
                    margin-bottom:10px;
                    &:hover {
                        background-color: #1786ff;
                    }
                  }  
                  .btn-default{
                    background-color: #fff;
                    color: #000;
                    border: 1px solid #ddd;                    
                  }                     
                  span{
                      margin: 5px 10px 0px;
                      font-size: 12px;                     
                  }
                  .btn_hidden{
                    display: none;
                  }
                  .btn_show{
                    display: inline-block;
                    float : right;
                    cursor: pointer
                  }
              }
      }
      .dialog_content_type_all{
        width:450px;
        border-radius: inherit;
        box-sizing: border-box;
        padding-bottom: 10px;
        .dialog_message{
            min-height:100px;
            margin:0;
            width:100%;
            text-align: center !important;
            line-height: 100px !important;          
        }
      }

}
/*弹出框下拉框*/

.calendar-dropdown {
    background: #fff;
    position: absolute;
    left: 0;
    top: 0;
    padding: 4px;
    border: 1px solid #eee;
    border-radius: 2px;
    z-index: 999;
}

.calendar-dropdown:before {
    position: absolute;
    left: 30px;
    top: -10px;
    content: "";
    border: 5px solid rgba(0, 0, 0, 0);
    border-bottom-color: #DEDEDE;
}

.calendar-dropdown:after {
    position: absolute;
    left: 30px;
    top: -9px;
    content: "";
    border: 5px solid rgba(0, 0, 0, 0);
    border-bottom-color: #fff;
}

.calendar-dialog {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    letter-spacing: 0;
}

.calendar-dialog-mask {
    background: rgba(255, 255, 255, .5);
    width: 100%;
    height: 100%;
}

.calendar-dialog-body {
    background: #fff;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    padding: 20px;
    border: 1px solid #eee;
    border-radius: 2px;
}

