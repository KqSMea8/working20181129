.header-item{
    font-family: '微软雅黑 Regular', '微软雅黑';
    font-weight: 400;
    font-style: normal;
    font-size: 18px;
    color: #0066CC;
    cursor: pointer;
}
.header{
    color : #000;
}
.header span + span{
    margin-left : 5px;
    font-family: '微软雅黑 Regular', '微软雅黑';
}

.tab{
    border-bottom : 1px solid  #ccc;
    margin-top : 15px;
    margin-bottom : 30px;
    height 40px;
    div {
        float left;
        padding :0px 20px;
        line-height 38px;
        font-style: normal;
        font-size: 14px;
        cursor : pointer;
        margin-right : 10px;
        color: #000;
    }
    .clear{
        clear : both;
    }
}

.tab > div:hover{
    border-bottom : 3px solid #007AFF;
}
.tab > div.tab-active{
    border-bottom : 3px solid #007AFF;
    color:#007AFF ;
}
